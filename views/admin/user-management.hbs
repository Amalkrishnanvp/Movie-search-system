<section>
    <div class="px-6 py-4">
        <div class="flex justify-center">
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg w-full bg-gray-900">
                <h2 class="text-white p-5 text-xl font-bold text-center">Users</h2>
                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                No.
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Name
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Email
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Favourites
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if users.length}}
                        {{#each users}}
                        <tr
                            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600">
                            <td class="px-6 py-4">
                                {{addOne @index}}
                            </td>
                            <td class="px-6 py-4">
                                {{this.name}}
                            </td>
                            <td class="px-6 py-4">
                                {{this.email}}
                            </td>
                            <td class="px-6 py-4">
                                favourite
                            </td>
                            <td class="px-6 py-4">
                                <a href="" onclick="deleteMovie(event, '{{this.id}}')"
                                    class="font-medium text-red-600 hover:underline">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                        {{/if}}


                    </tbody>
                </table>
            </div>


        </div>
    </div>
</section>