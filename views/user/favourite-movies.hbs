<section>
    <div class="mx-auto max-w-2xl px-4 py-8 sm:px-6 lg:max-w-7xl lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-10 animate-fadeIn">Favourite Movies</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#if favouriteMovies.length}}
            {{#each favouriteMovies}}
            <div
                class="flex flex-row rounded-2xl shadow-md border border-gray-700 overflow-hidden bg-gray-900 relative transform transition duration-300 hover:scale-[1.02] hover:shadow-2xl">

                <!-- Image Section -->
                <div class="w-1/3 bg-gray-800 overflow-hidden">
                    <img src="https://image.tmdb.org/t/p/original{{this.PosterPath}}" alt="{{this.Title}} poster"
                        class="w-full h-full object-cover transition-transform duration-500 hover:scale-110" />
                </div>

                <!-- Content Section -->
                <div class="w-2/3 p-4 flex flex-col justify-between">
                    <div>
                        <h3 class="text-lg font-bold text-white mb-1 line-clamp-2">{{this.Title}}</h3>
                        <p class="text-xs text-gray-400">{{this.ReleaseDate}} â€¢ {{this.Type}}</p>
                    </div>

                    <div class="flex items-center space-x-3 mt-4">
                        <!-- Detailed View Button -->
                        <a href="" id="add-movie-btn" data-id="{{this.tmdbId}}"
                            onclick="addMovie(event, '{{this.tmdbId}}')"
                            class="inline-flex items-center gap-1 px-4 py-2 text-xs font-semibold text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-400 transition-all duration-300">
                            Detailed View
                            <svg class="w-4 h-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                fill="none" viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Favorite Button -->
                <button
                    class="absolute bottom-3 right-3 p-2 group bg-gray-800 rounded-full hover:bg-gray-700 transition-all duration-300"
                    onclick="addToFavourites(event, '{{this.tmdbId}}')">

                    {{#isFavourite ../favouriteMovies this.tmdbId}}
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 text-red-500 group-hover:text-gray-300 transition-all" fill="currentColor"
                        viewBox="0 0 24 24" id="heart-{{this.tmdbId}}" data-favorite="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    {{else}}
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 text-gray-400 group-hover:text-red-500 transition-all" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24" id="heart-{{this.tmdbId}}" data-favorite="false">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    {{/isFavourite}}

                </button>
            </div>

            {{/each}}
            {{/if}}
        </div>
    </div>
</section>