<div class="flex flex-col justify-center px-6 py-28 lg:py-14 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        {{! <div class="text-center w-auto h-10">
            <i class="fa-solid fa-right-to-bracket text-2xl"></i>
        </div> }}
        <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Log In</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form class="space-y-6" action="/login" method="POST">
            {{#if loginErr}}
            <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400"
                role="alert">
                <span class="font-medium">Invalid username or password!
            </div>
            {{/if}}
            <div>
                <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
                <div class="mt-2">
                    <input id="email" name="email" type="email" autocomplete="email" required
                        class="p-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 sm:text-sm sm:leading-6" />
                </div>
            </div>

            <div>
                <div class="flex items-center justify-between">
                    <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                    <div class="text-sm">
                        <a href="#" class="font-semibold text-custom-color-1 hover:text-custom-color-2">Forgot
                            password?</a>
                    </div>
                </div>
                <div class="mt-2 relative">
                    <input id="password" name="password" type="password" autocomplete="current-password" required
                        class="login-password p-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 sm:text-sm sm:leading-6" />
                    <i
                        class="fa-regular fa-eye-slash absolute right-2 top-2.5 cursor-pointer login-password-eye-icon"></i>
                    <i class="fa-regular fa-eye absolute right-2 top-2.5 login-show-password hide cursor-pointer"></i>
                </div>
            </div>
            <div>
                <button type="submit"
                    class="flex w-full justify-center rounded-md bg-custom-color-1 hover:bg-custom-color-2 px-3 py-2 text-sm font-semibold leading-6 text-white shadow-sm">Log
                    in</button>
            </div>
        </form>

        <p class="mt-10 text-center text-sm text-gray-500">
            Create new account?
            <a href="/signup" class="font-semibold leading-6 text-custom-color-1 hover:text-custom-color-2">Sign up
                here</a>
        </p>
    </div>
</div>

<script src="/javascripts/login.js"></script>