<section class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 text-white overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
        <div
            class="absolute inset-0 bg-[url('https://image.tmdb.org/t/p/original{{movieData.backdrop_path}}')] bg-cover bg-center animate-pulse-scale">
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/80 to-gray-900/20"></div>
    </div>

    <!-- Main Content -->
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 z-10">
        <!-- Movie Header with Fade-in Animation -->
        <div class="animate-fade-in-up">
            <div class="flex flex-col md:flex-row gap-8 items-start">
                <!-- Poster with Glow Effect -->
                <div
                    class="relative group flex-shrink-0 w-full md:w-96 h-[32rem] rounded-2xl overflow-hidden shadow-2xl transform transition-all duration-500 hover:scale-[1.02]">
                    <div
                        class="absolute inset-0 bg-blue-500/10 blur-xl group-hover:opacity-50 transition-opacity duration-300">
                    </div>
                    <img src="https://image.tmdb.org/t/p/original{{movieData.poster_path}}"
                        alt="{{movieData.title}} poster"
                        class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                        onerror="this.src='https://via.placeholder.com/500x750?text=Poster+Not+Available'">
                    <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black/90 to-transparent">
                        <span
                            class="inline-block px-3 py-1 bg-blue-600 rounded-full text-sm font-bold mb-2">{{movieData.vote_average}}/10</span>
                        <h1 class="text-4xl font-extrabold tracking-tight">{{movieData.title}}</h1>
                        <p class="text-xl text-blue-300 italic">{{movieData.tagline}}</p>
                    </div>
                </div>

                <!-- Movie Meta Data -->
                <div class="flex-1 space-y-6">
                    <!-- Title and Year -->
                    <div>
                        <h1
                            class="text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-blue-600">
                            {{movieData.title}}</h1>
                        <div class="flex items-center space-x-4 mt-2">
                            <span class="text-blue-400">{{movieData.release_date}}</span>
                            <span class="text-gray-400">•</span>
                            <span>{{movieData.runtime}} min</span>
                            <span class="text-gray-400">•</span>
                            <span class="capitalize">{{movieData.status}}</span>
                        </div>
                    </div>

                    <!-- Genres -->
                    <div class="flex flex-wrap gap-2">
                        {{#each movieData.genres}}
                        <span
                            class="px-3 py-1 bg-blue-900/50 rounded-full text-sm font-medium backdrop-blur-sm border border-blue-500/30 hover:bg-blue-800/70 transition-all duration-200">{{name}}</span>
                        {{/each}}
                    </div>

                    <!-- Overview -->
                    <div class="prose prose-invert max-w-none">
                        <h3 class="text-2xl font-bold text-blue-300 mb-2">Synopsis</h3>
                        <p class="text-lg leading-relaxed">{{movieData.overview}}</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-wrap gap-4 pt-4">
                        <button
                            class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg font-bold flex items-center gap-2 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/30 transform hover:-translate-y-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"
                                    clip-rule="evenodd" />
                            </svg>
                            Watch Trailer
                        </button>
                        <button
                            class="px-6 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg font-bold flex items-center gap-2 transition-all duration-300 hover:shadow-lg hover:shadow-gray-500/20 border border-gray-700">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                fill="currentColor">
                                <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
                            </svg>
                            Add to Watchlist
                        </button>
                        {{#if movieData.imdb_id}}
                        <a href="https://www.imdb.com/title/{{movieData.imdb_id}}" target="_blank"
                            class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 rounded-lg font-bold flex items-center gap-2 transition-all duration-300 hover:shadow-lg hover:shadow-yellow-500/30">
                            <span class="font-bold">IMDb</span> {{movieData.vote_average}}
                        </a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Section with Slide-up Animation -->
        <div class="mt-16 animate-slide-up">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Production Companies -->
                <div
                    class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-blue-500/30 transition-all duration-300">
                    <h3 class="text-xl font-bold text-blue-300 mb-4">Production</h3>
                    <ul class="space-y-4">
                        {{#each movieData.production_companies}}
                        <li class="flex items-center gap-3">
                            {{#if logo_path}}
                            <div class="flex-shrink-0 h-10 w-10 rounded-md bg-gray-700/50 overflow-hidden">
                                <img src="https://image.tmdb.org/t/p/w200{{logo_path}}" alt="{{name}} logo"
                                    class="h-full w-full object-contain p-1"
                                    onerror="this.src='https://via.placeholder.com/100x100?text=Logo'">
                            </div>
                            {{/if}}
                            <div>
                                <p class="font-medium">{{name}}</p>
                                <p class="text-sm text-gray-400">{{origin_country}}</p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>

                <!-- Countries & Languages -->
                <div
                    class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-blue-500/30 transition-all duration-300">
                    <h3 class="text-xl font-bold text-blue-300 mb-4">Details</h3>
                    <div class="space-y-6">
                        <div>
                            <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-2">Countries</h4>
                            <div class="flex flex-wrap gap-2">
                                {{#each movieData.production_countries}}
                                <span class="px-3 py-1 bg-gray-700/50 rounded-full text-sm">{{name}}</span>
                                {{/each}}
                            </div>
                        </div>
                        <div>
                            <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-2">Languages</h4>
                            <div class="flex flex-wrap gap-2">
                                {{#each movieData.spoken_languages}}
                                <span class="px-3 py-1 bg-gray-700/50 rounded-full text-sm">{{english_name}}</span>
                                {{/each}}
                            </div>
                        </div>
                        <div>
                            <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-2">Budget</h4>
                            <p class="text-xl font-mono">${{movieData.budget}}</p>
                        </div>
                    </div>
                </div>

                <!-- Technical Specs -->
                <div
                    class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-blue-500/30 transition-all duration-300">
                    <h3 class="text-xl font-bold text-blue-300 mb-4">Technical Specs</h3>
                    <div class="space-y-4">
                        <div>
                            <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Original Title</h4>
                            <p class="text-lg">{{movieData.original_title}}</p>
                        </div>
                        <div>
                            <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Original Language
                            </h4>
                            <p class="text-lg capitalize">{{movieData.original_language}}</p>
                        </div>
                        <div>
                            <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Popularity</h4>
                            <div class="w-full bg-gray-700 rounded-full h-2.5">
                                <div class="bg-blue-600 h-2.5 rounded-full" style="width: {{movieData.popularity}}%">
                                </div>
                            </div>
                            <p class="text-sm text-right text-gray-400 mt-1">{{movieData.popularity}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Animation Styles -->
    <style>
        @keyframes pulseScale {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .animate-pulse-scale {
            animation: pulseScale 20s infinite ease-in-out;
        }

        .animate-fade-in-up {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.8s forwards 0.3s;
        }

        .animate-slide-up {
            opacity: 0;
            transform: translateY(40px);
            animation: fadeInUp 0.8s forwards 0.6s;
        }

        .animate-fade-in {
            opacity: 0;
            animation: fadeIn 1s forwards 0.9s;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        .parallax-image {
            will-change: transform;
        }
    </style>


</section>