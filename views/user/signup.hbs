<div class="flex flex-col justify-center items-center min-h-screen bg-gray-50 px-4 py-12">
    <div class="w-full max-w-md">
        <!-- Styled box container -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200">
            <!-- Decorative header strip -->
            <div class="bg-gradient-to-r from-blue-600 to-indigo-700 py-4 px-6">
                <h2 class="text-center text-2xl font-bold text-white">Create Account</h2>
                <p class="text-center text-blue-100 text-sm mt-1">Please sign up to your account</p>
            </div>

            <!-- Form content -->
            <div class="p-8">
                {{#if signupErr}}
                <div class="p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
                    <span class="font-medium">{{signupErr}}</span>
                </div>
                {{/if}}

                <form class="space-y-5" action="/auth/signup" method="POST">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                        <div class="mt-1">
                            <input id="name" name="name" type="text" autocomplete="name" required
                                class="w-full px-4 py-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                                placeholder="Enter your username" />
                        </div>
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
                        <div class="mt-1">
                            <input id="email" name="email" type="email" autocomplete="email" required
                                class="w-full px-4 py-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                                placeholder="your@email.com" />
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                        <div class="mt-1 relative">
                            <input id="password" name="password" type="password" autocomplete="new-password" required
                                class="password-input w-full px-4 py-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                                placeholder="••••••••" />
                            <i
                                class="fa-regular fa-eye-slash absolute right-3 top-3.5 cursor-pointer password-eye-icon text-gray-400 hover:text-gray-600"></i>
                            <i
                                class="fa-regular fa-eye absolute right-3 top-3.5 show-password hide cursor-pointer text-gray-400 hover:text-gray-600"></i>
                        </div>
                        <p class="mt-2 text-xs text-gray-500">Must be at least 8 characters</p>
                    </div>

                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm
                            Password</label>
                        <div class="mt-1 relative">
                            <input id="confirmPassword" name="confirmPassword" type="password"
                                autocomplete="new-password" required
                                class="confirm-password-input w-full px-4 py-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
                                placeholder="••••••••" />
                            <i
                                class="fa-regular fa-eye-slash absolute right-3 top-3.5 cursor-pointer confirm-password-eye-icon text-gray-400 hover:text-gray-600"></i>
                            <i
                                class="fa-regular fa-eye absolute right-3 top-3.5 show-confirm-password hide cursor-pointer text-gray-400 hover:text-gray-600"></i>
                        </div>
                    </div>



                    <div>
                        <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150">
                            Sign Up
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center text-sm text-gray-600">
                    <p>Already have an account?
                        <a href="/auth/login" class="font-medium text-blue-600 hover:text-blue-500">Log in here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/signup.js"></script>