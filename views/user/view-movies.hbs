<section>
    <div class="mx-auto max-w-2xl px-4 py-8 sm:px-6 lg:max-w-7xl lg:px-8">

        <h2 class="text-3xl font-bold mb-6">Random Picks</h2>
        <div class="grid grid-cols-2 gap-x-4 gap-y-6 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 xl:gap-x-6">
            {{#if movies.length}}
            {{#each movies}}
            <div
                class="flex flex-col h-full bg-white border border-gray-200 rounded-xl shadow-md overflow-hidden transform transition duration-300 hover:scale-[1.03] hover:shadow-lg dark:bg-gray-800 dark:border-gray-700">

                <!-- Image -->
                <div class="h-48 flex items-center justify-center bg-gray-100 dark:bg-gray-900 overflow-hidden">
                    <img class="max-h-full max-w-full object-contain transition-transform duration-300 hover:scale-105"
                        src="https://image.tmdb.org/t/p/original{{this.PosterPath}}" alt="{{this.Title}} poster" />
                </div>

                <!-- Content -->
                <div class="p-4 flex-1 flex flex-col justify-between space-y-2">
                    <div class="flex justify-between items-start">
                        <h5 class="text-base font-semibold text-gray-900 dark:text-white line-clamp-2 hover:underline">
                            {{this.Title}}
                        </h5>
                        <span
                            class="text-xs px-2 py-0.5 bg-blue-100 text-blue-800 rounded-full dark:bg-blue-900 dark:text-blue-300">
                            {{this.Type}}
                        </span>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">{{this.Year}}</p>
                </div>

                <!-- Action Buttons -->
                <div class="p-4 flex justify-between items-center border-t border-gray-200 dark:border-gray-700">
                    <a href="/movie/get-movie/{{this.tmdbId}}" id="add-movie-btn" data-id="{{this.tmdbId}}"
                        onclick=""
                        class="flex items-center gap-1 px-4 py-2 text-xs font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 transition-colors duration-300 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800">
                        Detailed View
                        <svg class="w-4 h-4 rtl:rotate-180" fill="none" viewBox="0 0 14 10"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9" />
                        </svg>
                    </a>

                    <button onclick="addToFavourites(event, '{{this.tmdbId}}')"
                        class="p-2 rounded-full group transition-all duration-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        {{#isMovieInFavourites this.tmdbId ../favouriteMoviesIds}}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 group-hover:text-gray-400"
                            fill="currentColor" viewBox="0 0 24 24" id="heart-{{this.tmdbId}}" data-favorite="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                        {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 group-hover:text-red-500"
                            fill="none" stroke="currentColor" viewBox="0 0 24 24" id="heart-{{this.tmdbId}}"
                            data-favorite="false">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                        {{/isMovieInFavourites}}
                    </button>
                </div>
            </div>

            {{/each}}
            {{/if}}
        </div>

    </div>
</section>